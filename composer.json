{
    "name": "wepamultimedia/blog",
    "description": "This is my package blog",
    "keywords": [
        "wepamultimedia",
        "laravel",
        "blog"
    ],
    "homepage": "https://github.com/wepamultimedia/blog",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Puche",
            "email": "cpuche@wepa.es",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26",
        "wepamultimedia/core" : ">=1.8"
    },
    "autoload": {
        "psr-4": {
            "Wepa\\Blog\\": "src",
            "Wepa\\Blog\\Database\\Factories\\": "database/factories",
            "Wepa\\Blog\\Database\\": "database"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wepa\\Blog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wepa\\Blog\\BlogServiceProvider"
            ],
            "aliases": {
                "Blog": "Wepa\\Blog\\Facades\\Blog"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
